<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean name="/admin" class="net.mind_engine.oculus.web.controllers.SecureSimpleViewController">
        <property name="view" value="admin"/>
        <property name="title" value="Administration Panel"/>
        <property name="permissions">
            <list>
                <ref bean="_P_USER_MANAGMENT"/>
            </list>
        </property>
    </bean>
    
    <bean name="/user-search" class="net.mind_engine.oculus.web.controllers.admin.user.UserSearchController">
    </bean>
    
    <bean name="/delete-user" class="net.mind_engine.oculus.web.controllers.admin.user.UserDeleteController">
        <property name="userDAO" ref="userDAO"></property>
        <property name="view" value="redirect:/admin/user-create"/>
    </bean>
    
    <bean name="/edit-user" class="net.mind_engine.oculus.web.controllers.admin.user.UserEditController">
        <property name="sessionForm" value="true"/>
        <property name="commandName" value="editUser"/>
        <property name="title" value="Edit User"/>
        <property name="commandClass" value="net.mind_engine.oculus.domain.user.User"/>
        <property name="validator">
            <bean class="net.mind_engine.oculus.service.admin.user.UserCreateValidator"></bean>
        </property>
        <property name="formView" value="user-edit"/>
        <property name="successView" value="user-edit"></property>
        <property name="userDAO" ref="userDAO"/>
        <property name="permissions">
            <list>
                <ref bean="_P_USER_MANAGMENT"/>
            </list>
        </property>
    </bean>
    
    <bean name="/user-create" class="net.mind_engine.oculus.web.controllers.admin.user.UserCreateController">
        <property name="sessionForm" value="true"/>
        <property name="title" value="Create User"/>
        <property name="commandName" value="createUser"/>
        <property name="commandClass" value="net.mind_engine.oculus.domain.user.User"/>
        <property name="validator">
            <bean class="net.mind_engine.oculus.service.admin.user.UserCreateValidator"></bean>
        </property>
        <property name="formView" value="user-create"/>
        <property name="successView" value="user-create-success"></property>
        <property name="userDAO" ref="userDAO"/>
        <property name="config" ref="oculusConfig"/>
        <property name="permissions">
            <list>
                <ref bean="_P_USER_MANAGMENT"/>
            </list>
        </property>
        
    </bean>
    
    
</beans>